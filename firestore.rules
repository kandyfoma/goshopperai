rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Helper function to check if user has active subscription
    function hasSubscription() {
      return isAuthenticated() && 
        exists(/databases/$(database)/documents/artifacts/goshopperai/users/$(request.auth.uid)/subscription/status) &&
        get(/databases/$(database)/documents/artifacts/goshopperai/users/$(request.auth.uid)/subscription/status).data.isSubscribed == true;
    }
    
    // GoShopperAI artifact data
    match /artifacts/goshopperai {
      
      // User data - only owner can read/write
      match /users/{userId} {
        allow read, write: if isOwner(userId);
        
        // User profile
        match /profile/{document=**} {
          allow read, write: if isOwner(userId);
        }
        
        // User's receipts
        match /receipts/{receiptId} {
          allow read: if isOwner(userId);
          // Only Cloud Functions can write receipts (after parsing)
          allow write: if false;
        }
        
        // Subscription status
        match /subscription/{document=**} {
          allow read: if isOwner(userId);
          // Only Cloud Functions can write subscription data
          allow write: if false;
        }
        
        // Payment records
        match /payments/{paymentId} {
          allow read: if isOwner(userId);
          // Only Cloud Functions can write payment data
          allow write: if false;
        }
      }
      
      // Public price data - anyone authenticated can read
      match /public/prices/{document=**} {
        allow read: if isAuthenticated();
        // Only Cloud Functions can write price data
        allow write: if false;
      }
      
      // Public store data - anyone authenticated can read
      match /public/stores/{document=**} {
        allow read: if isAuthenticated();
        allow write: if false;
      }
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
